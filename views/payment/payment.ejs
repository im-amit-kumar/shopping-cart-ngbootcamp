<%- include("../partials/header")%>
<%- include("../partials/navbar")%>



<div class="container" style="margin-top:5rem;width:80vw;margin-bottom: 11rem;">

            <form class="validated-form" action="#" method="POST" style="max-width:70%;margin:10px auto" novalidate>
                <h6 class="display-6"> Add Your Payment Info </h6>
                <div class="mb-3">
                  <label for="name" class="form-label">Name</label>
                  <input type="text" class="form-control" id="name" placeholder="Product Name" name="product[name]" required>
                  <div class="valid-feedback">
                    Looks good!
                  </div>
                </div>
                <div class="mb-3">
                  <label for="card" class="form-label">Card Number</label>
                  <input type="text" class="form-control" id="card" name="card" required>
                  <div class="valid-feedback">
                    Looks good!
                  </div>
                </div>
                <div class="mb-3">
                  <label for="exp" class="form-label">Expiary</label>
                  <input type="date" class="form-control" id="card" placeholder="Expiary Year" name="card" required>
                  <div class="valid-feedback">
                    Looks good!
                  </div>
                </div>
                <div class="mb-3">
                    <label for="price" class="form-label">Price in &#8377;</label>
                    <input type="number" class="form-control" id="price" placeholder="Price" name="product[price]" required>
                    <div class="valid-feedback">
                      Looks good!
                    </div>
                  </div>
        
                <div class="mb-3">
                    <label for="address" class="form-label">Address</label>
                    <textarea class="form-control" id="address" cols="30" rows="5" name="addreess" required></textarea>
                    <div class="valid-feedback">
                      Looks good!
                    </div>
                  </div>
               
                <button type="submit" class="btn btn-success">Proceed</button>
              </form>
        
   
</div>




<%- include("../partials/footer")%>